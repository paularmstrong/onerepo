		"ignore": "^5.3.1",
		"jiti": "^2.4.2"
	},
	"devDependencies": {
		"@internal/tsconfig": "workspace:^",
		"@internal/vitest-config": "workspace:^",
		"@onerepo/test-cli": "workspace:^",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.28.0",
		"onerepo": "workspace:^",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.33.0"
	},
	"peerDependencies": {
		"eslint": "^9",
		"onerepo": "^1"
	},
	"engines": {
		"node": "^18 || ^20 || ^22"
	}
