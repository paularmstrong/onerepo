{
	"name": "@onerepo/plugin-eslint",
	"description": "Official ESLint plugin for the oneRepo toolchain.",
	"title": "ESLint",
	"version": "3.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/paularmstrong/onerepo.git",
		"directory": "plugins/eslint"
	},
	"homepage": "https://onerepo.tools/plugins/eslint/",
	"type": "module",
	"main": "./src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./config": "./src/config.ts"
	},
	"publishConfig": {
		"access": "public",
		"main": "./dist/index.js",
		"typings": "./dist/src/index.d.ts",
		"exports": {
			".": {
				"types": "./dist/src/index.d.ts",
				"import": "./dist/index.js"
			},
			"./config": {
				"types": "./dist/src/config.d.ts",
				"import": "./dist/config.js"
			}
		}
	},
	"files": [
		"./dist/**/*",
		"./README.md",
		"./CHANGELOG.md"
	],
	"dependencies": {
		"eslint-formatter-onerepo": "2.0.0",
		"glob": "^11.0.3",
		"ignore": "^7.0.5",
		"jiti": "^2.5.1"
	},
	"devDependencies": {
		"@internal/tsconfig": "workspace:^",
		"@internal/vitest-config": "workspace:^",
		"@onerepo/test-cli": "workspace:^",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.28.0",
		"onerepo": "workspace:^",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.38.0"
	},
	"peerDependencies": {
		"eslint": "^9",
		"onerepo": "^1"
	},
	"engines": {
		"node": "^20.19.0 || ^22.10.0 || ^24"
	}
}
